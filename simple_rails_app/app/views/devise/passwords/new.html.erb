<div class="row">
  <div class="col-sm-9 col-sm-offset-3">
    <h3 class='first'>Forgot your password?</h3>
  </div>
</div>

<br/>
<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-9") do |f| %>

  <%= f.email_field :email, autofocus: true %>

  <%= f.form_group do %>
    <%= f.primary "Send me reset password instructions" %>
  <% end %>

<% end %>

<hr />

<%= render "devise/shared/links" %>
